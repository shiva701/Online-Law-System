<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>hirelawyer</servlet-name>
        <servlet-class>onlineLaw.hirelawyer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verify</servlet-name>
        <servlet-class>onlineLaw.verify</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usermanagefir</servlet-name>
        <servlet-class>onlineLaw.usermanagefir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>lawyerlogin</servlet-name>
        <servlet-class>onlineLaw.lawyerlogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verifylawyer</servlet-name>
        <servlet-class>onlineLaw.verifylawyer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>lawyercaseupdate</servlet-name>
        <servlet-class>onlineLaw.lawyercaseupdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>lawyerlogout</servlet-name>
        <servlet-class>onlineLaw.lawyerlogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hirelawyer</servlet-name>
        <url-pattern>/hirelawyer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verify</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>lawyerlogin</servlet-name>
        <url-pattern>/lawyerlogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verifylawyer</servlet-name>
        <url-pattern>/verifylawyer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>lawyercaseupdate</servlet-name>
        <url-pattern>/lawyercaseupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>lawyerlogout</servlet-name>
        <url-pattern>/lawyerlogout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            10
        </session-timeout>
    </session-config>
</web-app>
